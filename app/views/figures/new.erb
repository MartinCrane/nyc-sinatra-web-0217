<form action='/figures/new' method="post">
  <!-- <label>Landmark Name:</label>
  <input type="text" name="landmark[name]" id='landmark_name'><br /> -->
  <label>Figure Name:</label>
    <input type="text" name="figure[name]" id="figure_name"><br />

  <label>Figure Title ID:</label>
    <%Title.all.each do |x|%>
    <input type="checkbox" name='figure[title_ids][]' id='title_<%=x.id%>' value='<%=x.id%>'><%=x.name%></input>
    <%end%>
  <br />
  <label>And or create a new Title</label>
    <input type="text" name="title[name]" id="new_title" /><br />
  <br />
  <br />
  <label>Figure Landmark ID:</label>
    <%Landmark.all.each do |x|%>
    <input type="checkbox" name='figure[landmark_ids][]' id='landmark_<%=x.id%>' value='<%=x.id%>'><%=x.name%></input>
    <%end%>
  <br />
  <br />
  <label>And or create a new Landmark</label>
    <input type="text" name="landmark[name]" id="new_landmark" /><br />
  <br />
  <br />
  <input type="submit" value="Create New Figure" id="Create New Figure" />
</form>
